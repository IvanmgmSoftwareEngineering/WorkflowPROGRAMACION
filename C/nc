echo "			// -Finalización de una Hebra: 	      pthread_exit(void *res). Toda Hebra debe finalizar su ejecución con esta función.">> ./$1.c
echo "			// 	-void *res = ¿¿Por qué aquí es apuntador simple y en join es apuntador doble??">> ./$1.c
