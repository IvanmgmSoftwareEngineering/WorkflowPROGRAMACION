echo "						 // variable se comporte como 'estática', si hacemos la Inicialización después de la Declaración,">> ./$1.c
echo "						 // entonces la variable se comportará como una variable que no es de tipo estática.">> ./$1.c
echo "						 // Esto se debe a que al hacerlo todo en una misma línea la Inicialización sólo se realiza una vez,">> ./$1.c
echo "						 // el resto de veces que volvamos a pasar por la mismo zona del código,">> ./$1.c
echo "						 // no se tendrá en cuenta la Inicialización. Las variables de ">> ./$1.c
echo "						 // tipo 'estáticas' tienen la característica que conservan su valor, es decir,">> ./$1.c
echo "						 // si la variable está Declarada e Inicializada dentro de una función la que llamamos en repetidas ocasiones,">> ./$1.c
echo "						 // la variable 'estática conservará su último valor. ">> ./$1.c
echo "						 // Si esto mismo lo hiciésemos con una variable 'no estática', ">> ./$1.c
echo "						 // entonces la Inicialización se tendría en cuenta cada vez que llamamos a la función,">> ./$1.c
echo "						 // por lo que perderíamos el último valor.">> ./$1.c



echo "		int i;" >> ./$1.c
